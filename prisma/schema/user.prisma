
model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  bio         String?
  image       String?
  interests   String[]
  hobbies   String[]
  location    String?
  isDeleted    Boolean @default(false)
  role        Role     @default(USER)
  userStatus  UserStatus @default(ACTIVE)

  payments         Payment[]
  eventsJoined     EventParticipant[]
  eventsHosted     Event[]           @relation("hostedEvents")
  reviewsGiven     Review[]          @relation("reviewsByUser")
  reviewsReceived  Review[]          @relation("reviewsForHost")

  createdAt   DateTime @default(now())
}