generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  USER
  HOST
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
  REQUESTED
  SUSPENDED
}

enum PaymentStatus {
  PAID 
  UNPAID
  PENDING
  COMPLETED
}

enum EventStatus {
  OPEN
  CLOSED
  CANCELLED
  COMPLETED
}

enum ReviewStatus {
    PENDING 
    APPROVED 
    REJECTED  
}

enum ReportStatus {
  PENDING
  REVIEWED
  ACTION_TAKEN
}

// Models
model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  bio         String?
  image       String?
  interests   String[]
  hobbies   String[]
  location    String?
  isDeleted    Boolean @default(false)
  isRequestedHost Boolean @default(false)
  role        Role     @default(USER)
  userStatus  UserStatus @default(ACTIVE)

  payments         Payment[]
  eventsJoined     EventParticipant[]
  eventsHosted     Event[]           @relation("hostedEvents")
  reviewsGiven     Review[]          @relation("reviewsByUser")
  reviewsReceived  Review[]          @relation("reviewsForHost")
  reportsSubmitted Report[]          @relation("reporter")
  reportsReceived  Report[]          @relation("reportedUser")
  savedEvents      SavedEvent[]

  createdAt   DateTime @default(now())
}

model Report {
  id        String   @id @default(uuid())
  reporterId String
  targetUserId String?
  targetEventId String?
  reason     String
  status     ReportStatus @default(PENDING)
  createdAt  DateTime     @default(now())

  reporter   User   @relation("reporter", fields: [reporterId], references: [id])
  targetUser User?  @relation("reportedUser", fields: [targetUserId], references: [id])
  targetEvent Event? @relation(fields: [targetEventId], references: [id])
}

model SavedEvent {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, eventId]) // user ek event ekbar save korte parbe
}

model Event {
  id              String   @id @default(uuid())
  name            String
  type            String
  description     String?
  location        String
  image           String?
  date            DateTime
  time            String?
  minParticipants Int
  maxParticipants Int
  participantCount  Int      @default(0)
  fee             Float    @default(0)
  status          EventStatus  @default(OPEN) 
  createdAt       DateTime @default(now())

  host     User   @relation("hostedEvents", fields: [hostId], references: [id])
  hostId   String

  payments      Payment[]
  participants  EventParticipant[]
  reviews       Review[]
  report        Report[]
  savedEvents      SavedEvent[]
}

model EventParticipant {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  paid      Boolean  @default(false)
  joinedAt  DateTime @default(now())
}

model Payment {
  id        String        @id @default(uuid())
  amount    Float
  status    PaymentStatus @default(UNPAID)
  
  user   User   @relation(fields: [userId], references: [id])
  userId String

  event   Event  @relation(fields: [eventId], references: [id])
  eventId String

  transactionId      String   @unique
  paymentGatewayData Json?
  createAt           DateTime @default(now())
  updateAt           DateTime @updatedAt

  @@unique([userId, eventId])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  reviewer       User  @relation("reviewsByUser", fields: [reviewerId], references: [id])
  reviewerId     String
  host           User  @relation("reviewsForHost", fields: [hostId], references: [id])
  hostId         String

  event          Event @relation(fields: [eventId], references: [id])
  eventId        String
}